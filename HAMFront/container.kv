<Hammer>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 3
        spacing: 20
        padding: 40
        Label:
            text: "Temperature"
            font_size: 24
            bold: True
            color: 0.8, 0.8, 0.8, 1
        Label:
            text: root.temperature_string
            font_size: 32
            color: 0.4, 0.8, 0.4, 1
        Image:
            source: root.light_image
            size_hint_y: None
            height: 150
            keep_ratio: False
        Label:
            text: "Humidity"
            font_size: 24
            bold: True
            color: 0.8, 0.8, 0.8, 1
        Label:
            text: root.humidity_string
            font_size: 32
            color: 0.9, 0.2, 0.2, 1
        Image:
            source: root.water_image
            size_hint_y: None
            height: 150
            keep_ratio: False

